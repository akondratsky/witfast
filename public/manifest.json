{
  "manifest_version": 3,
  "name": "WitFast",
  "version": "1.0",
  "description": "Quick snippets in the context menu",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///",
        "http://*:*/*",
        "https://*:*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}