{
  "manifest_version": 3,
  "name": "WitFast",
  "version": "1.0",
  "description": "Quick snippets in the context menu",
  "permissions": [
    "contextMenus",
    "scripting",
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": false,
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "background": {
    "service_worker": "background.js"
  }
}